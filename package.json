{
  "name": "sample-functional-ddd",
  "version": "1.0.0",
  "description": "関数型プログラミングとDDDを組み合わせた受発注システムのサンプル",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:api": "bun run --watch src/index.ts",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "openapi:generate": "openapi-typescript openapi/openapi.yaml -o src/generated/api-schema.ts",
    "openapi:watch": "openapi-typescript openapi/openapi.yaml -o src/generated/api-schema.ts --watch"
  },
  "keywords": [
    "ddd",
    "functional-programming",
    "hexagonal-architecture",
    "typescript",
    "react"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "@types/react-router-dom": "^5.3.3",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@vitejs/plugin-react": "^5.1.0",
    "happy-dom": "^20.0.10",
    "openapi-typescript": "^7.10.1",
    "supertest": "^7.1.4",
    "typescript": "^5.3.3",
    "vite": "^7.2.2",
    "yaml": "^2.8.1"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-openapi-validator": "^5.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router": "^7.9.5",
    "react-router-dom": "^7.9.5",
    "swagger-ui-express": "^5.0.1"
  }
}
