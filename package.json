{
  "name": "sample-functional-ddd",
  "version": "1.0.0",
  "description": "関数型プログラミングとDDDを組み合わせた受発注システムのサンプル",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:api": "bun run --watch src/index.ts",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "openapi:generate": "openapi-typescript openapi/openapi.yaml -o src/generated/api-schema.ts",
    "openapi:watch": "openapi-typescript openapi/openapi.yaml -o src/generated/api-schema.ts --watch"
  },
  "keywords": [
    "ddd",
    "functional-programming",
    "hexagonal-architecture",
    "typescript",
    "react"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^5.1.0",
    "eslint": "^9.39.1",
    "happy-dom": "^20.0.10",
    "openapi-typescript": "^7.10.1",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.46.3",
    "vite": "^7.2.2",
    "yaml": "^2.8.1"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.6",
    "@hono/swagger-ui": "^0.5.2",
    "@hono/zod-openapi": "^1.1.4",
    "hono": "^4.10.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router": "^7.9.5",
    "react-router-dom": "^7.9.5",
    "zod": "^4.1.12"
  }
}
